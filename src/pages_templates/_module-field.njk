label
placeholder
value
isDisabled
 #}
    <module-field id="{% if fieldSet.id != '' %}{{fieldSet.id}}{% endif %}" class="{{PROJECT_NAME}}_field {{fieldSet.field_class}} {% if fieldSet.isRequired %}required{% endif %}">
        <label for="{{fieldSet.name}}" class="{{PROJECT_NAME}}_field-label">{{fieldSet.label}}</label>
        <div class="{{PROJECT_NAME}}_field-ctrler">
            {% if fieldSet.value != '' and fieldSet.isDisabled %}
            <input type="{{type}}" id="{{fieldSet.name}}" name="{{fieldSet.name}}" v-model="{{fieldSet.name}}" class="form-control" placeholder="{{fieldSet.placeholder}}" value="{{fieldSet.value}}" disabled>
            {% else %}
            <input type="{{type}}" id="{{fieldSet.name}}" name="{{fieldSet.name}}" v-model="{{fieldSet.name}}" class="form-control" placeholder="{{fieldSet.placeholder}}">
            {% endif %}
        </div>
    </module-field>
{% endmacro %}

