{% macro rcx(PROJECT_NAME, fieldSet, type = 'radio') %}
    <div class="{{ PROJECT_NAME }}_rcx">
        <label for="{{ fieldSet.id }}" class="{{ PROJECT_NAME }}_rcx-label">
            <input type="{{ type }}" id="{{ fieldSet.id }}" name="{{ fieldSet.nameArr }}" class="{{ PROJECT_NAME }}_rcx-input" value="{{ fieldSet.text }}">
            <span class="{{ PROJECT_NAME }}_rcx-label-inner">
                <span class="choicemark"></span>
                <span class="txt">{{ fieldSet.text }}</span>
            </span>
        </label>
    </div>
{% endmacro %}